@using Octokit;
@{
    User user = Model.Get<User>("User");
    IReadOnlyList<Repository> repos = Model.Get<IReadOnlyList<Repository>>("Repos");
}
<!DOCTYPE HTML>
<!--
	Prologue by HTML5 UP
	html5up.net | ajlkn
	Free for personal and commercial use under the CCA 3.0 license (html5up.net/license)
-->

<html>
    <head>
        <title>@user.Name</title>
        <meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="assets/css/main.css" />
    </head>
    <body class="is-preload">
    <!-- Header -->
			<div id="header">

				<div class="top">

					<!-- Logo -->
						<div id="logo">
							<span class="image avatar48"><img src="@user.AvatarUrl" alt="" /></span>
							<h1 id="title">@user.Name</h1>
							<p>Student. : @@@user.Login</p>
                            <p>@user.Bio</p>
						</div>

					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li><a href="#top1" id="top-link"><span class="icon solid fa-home">Intro</span></a></li>
								<li><a href="#repo" id="repo-link"><span class="icon solid fa-th">Repositories</span></a></li>
								<li><a href="#about" id="about-link"><span class="icon solid fa-user">About Me</span></a></li>
							</ul>
						</nav>

				</div>

				<div class="bottom">

					<!-- Social Icons -->
						<ul class="icons">
							<li><a href="https://twitter.com/AtriaSoft" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
							<li><a href="https://www.facebook.com/Daichata" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
							<li><a href="@user.HtmlUrl" class="icon brands fa-github"><span class="label">Github</span></a></li>
							<li><a href="http://atriasoft.work/" class="fas fa-globe-asia"><span class="label"></span></a></li>
							<li><a href="http://atriasoft.work/contact" class="icon solid fa-envelope"><span class="label">Contact</span></a></li>
						</ul>

				</div>

			</div>

            <!-- Main -->
			<div id="main">
				
				<!-- Intro -->
					<section id="top1" class="mytop dark cover" >
						<div class="container">
							<header>
								<h2 class="alt">Hi! I'm <strong>@user.Name</strong>, this is my portfolio.</h2>
								<br />
							</header>
						</div>
					</section>
                
				<!--Repositories-->
					<section id="repo" class="two">
						<div class="container">
                    		<h2 style="margin-bottom: 1em;">Repositories</h2>
							<div class="row">

								@*上位2つは大きく*@
								<div class="col-8 col-12-mobile">
            	            	@foreach(Repository repo in repos.Where(x => !x.Fork).OrderByDescending(x => x.StargazersCount).Where((y,index) => index < 2))
                	        	{
									<article class="item">
										<header>
											<h2>@repo.Name</h2>
											<h4>@repo.StargazersCount stars, @repo.ForksCount forks</h4>
											<p style="background-color: #4b231c; color: white">@repo.Description</p>
											<p>Created at @repo.CreatedAt.ToString("MM/dd/yyyy h:mm tt")</p>
											<a href="@repo.HtmlUrl" class="button scrolly">link</a>
										</header>
									</article>
            	            	}
								</div>

								@*その他は小さく*@
								<div class="col-4 col-12-mobile">
            	            	@foreach(Repository repo in repos.Where(x => !x.Fork).OrderByDescending(x => x.StargazersCount).Where((y,index) => index >= 2))
                	        	{
									<article class="item">
										<header>
											<h2>@repo.Name</h2>
											<h4>@repo.StargazersCount stars, @repo.ForksCount forks</h4>
											<p style="background-color: #4b231c; color: white">@repo.Description</p>
											<p>Created at @repo.CreatedAt.ToString("MM/dd/yyyy h:mm tt")</p>
											<a href="@repo.HtmlUrl" class="button scrolly">link</a>
										</header>
									</article>
            	            	}
								</div>

							</div>
						</div>
					</section>

				<!-- About Me -->
					<section id="about" class="three">
						<div class="container">

							<header>
								<h2>About Me</h2>
							</header>

							<img src="images/top/about_cover.jpg" alt="" width="80%"/>

							<p>.NET技術が大好きで、なんでもC#で書こうとします。</p>

							<h4 style="margin-bottom: 1em;">取ってつけたような Works</h4>
							<p><a href="./daggerBreak">daggerBreak</a><br>
							<a href="./TwD3">TwD3</a></p>
						</div>
					</section>

			</div>

        <!-- Footer -->
			<div id="footer">

				<!-- Copyright -->
					<ul class="copyright">
						<li>&copy; Atria. All rights reserved.</li><li>Design support: <a href="http://html5up.net">HTML5 UP</a></li>
					</ul>

			</div>

		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/jquery.scrolly.min.js"></script>
			<script src="assets/js/jquery.scrollex.min.js"></script>
			<script src="assets/js/browser.min.js"></script>
			<script src="assets/js/breakpoints.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>